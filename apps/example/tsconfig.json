{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "disableSourceOfProjectReferenceRedirect": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "noEmit": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./types"
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../../packages/inbeg-m3-theme"
    }
  ],
  "desplay": "example",
  "exclude": [
    "node_modules",
    "vite.config.ts",
    "tvyw.ts",
    "dist/*",
    "test/*"
  ]
}
